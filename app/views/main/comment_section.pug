div.card-body.mb-0
    each c in p.comments
        - var comment = c['comment']
        div.container-fluid(id=comment._id)
            div.row
                div.col-1.p-0
                    img.rounded-circle.border(src="/ficheiros/" + comment.poster.profile_pic, width="38", height="38")
                div.col-10.pl-0
                    p.p-2.bg-light.border.rounded
                        a(href="/user/" + comment.from)
                            b #{comment.poster.full_name} 
                            span.text-secondary #{comment.poster.id}
                        span.markdown-content #{comment.content}
                div.col-1
                    if comment.from === user.id
                        button.btn.close(data-dismiss="modal" aria-label="Close" value="Delete" onclick="apagaComentario('" + p._id +"', '" + comment._id + "')")
                            span(aria-hidden="true") 
                                h3 &times;
                

                    
    div.container-fluid
        div.row
            div.col-1.p-0
                img.rounded-circle.border(src="/ficheiros/" + user.profile_pic, width="38", height="38")
            div.col-11.p-0
                form(id="add-comment-form-" + p._id, onsubmit="adicionaComentario('"+ p._id + "')")
                    input.form-control(type="text" name="content" placeholder="Escreve um coment√°rio...")

